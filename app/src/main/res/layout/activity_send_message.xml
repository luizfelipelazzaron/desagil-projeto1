<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="30sp"
    tools:context=".SendMessage">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:srcCompat="@drawable/message" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/text_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:hint="Digite o número do telefone"
            android:layout_marginTop="10sp"
            android:inputType="phone"
            android:background="#76FF03"
            android:padding="7.5sp"
            android:textColor="#000000"
            android:textStyle="italic"
            android:textAlignment="center"
            android:textSize="20sp"
            tools:ignore="Autofill,HardcodedText" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/slash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#D7DAD7"
            android:text="/"
            android:layout_marginRight="2.5sp"
            android:textSize="20sp"
            tools:ignore="ButtonStyle,HardcodedText" />

        <Button
            android:id="@+id/dash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#D7DAD7"
            android:text="-"
            android:layout_marginRight="2.5sp"
            android:layout_marginLeft="2.5sp"
            android:textSize="20sp"
            tools:ignore="ButtonStyle,HardcodedText" />

        <Button
            android:id="@+id/dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#D7DAD7"
            android:text="."
            android:layout_marginLeft="2.5sp"
            android:textSize="20sp"
            tools:ignore="ButtonStyle,HardcodedText" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/backspace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#D7DAD7"
            android:text="apagar"
            android:layout_marginRight="2.5sp"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#D7DAD7"
            android:text="espaço"
            android:layout_marginLeft="2.5sp"
            android:textSize="20sp"
            tools:ignore="ButtonStyle,HardcodedText" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2.5sp"
            android:layout_weight="1"
            android:background="#D7DAD7"
            android:text="voltar"
            android:textSize="20sp"
            tools:ignore="ButtonStyle,HardcodedText" />

        <Button
            android:id="@+id/button_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2.5sp"
            android:layout_weight="1"
            android:background="#D7DAD7"
            android:text="enviar"
            android:textSize="20sp"
            tools:ignore="ButtonStyle,HardcodedText" />
    </LinearLayout>

    <Button
        android:id="@+id/cuidadorShortcut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:background="#FFEA00"
        android:text="Enviar para o cuidador"
        android:textSize="20sp"
        tools:ignore="HardcodedText" />

</LinearLayout>