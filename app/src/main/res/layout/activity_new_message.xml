<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="#FFFFFF"
    android:columnCount="1"
    android:orientation="vertical"
    android:padding="30sp"
    android:rowCount="3"
    tools:context=".NewMessage">

    <TextView
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="5sp"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/text_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:background="#FFFFFF"
        android:hint="Digite em morse"
        android:padding="7.5sp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/slash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2.5sp"
            android:layout_weight="1"
            android:background="#D7DAD7"
            android:text="/"
            android:textSize="20sp"
            tools:ignore="ButtonStyle,HardcodedText" />

        <Button
            android:id="@+id/dash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2.5sp"
            android:layout_marginRight="2.5sp"
            android:layout_weight="1"
            android:background="#D7DAD7"
            android:text="&#8210;"
            android:textSize="20sp"
            tools:ignore="ButtonStyle,HardcodedText" />

        <Button
            android:id="@+id/dot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2.5sp"
            android:layout_weight="1"
            android:background="#D7DAD7"
            android:text="&#8226;"
            android:textSize="20sp"
            tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/backspace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2.5sp"
            android:layout_weight="1"
            android:background="#D7DAD7"
            android:text="apagar"
            android:textSize="20sp"
            tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded" />

        <Button
            android:id="@+id/space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2.5sp"
            android:layout_weight="1"
            android:background="#D7DAD7"
            android:text="espaço"
            android:textSize="20sp"
            tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:background="#FFFFFF"
        android:text="Dicionários"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp">

        <Button
            android:id="@+id/buttonCharToMorse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2.5sp"
            android:layout_weight="1"
            android:background="#A7DC68"
            android:text="Romano/Morse"
            android:textSize="16sp"
            tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded" />

        <Button
            android:id="@+id/buttonMorseToChar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2.5sp"
            android:layout_weight="1"
            android:background="#A7DC68"
            android:text="Morse/Romano"
            android:textSize="16sp"
            tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp">

        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2.5sp"
            android:layout_weight="1"
            android:background="#FEBD57"
            android:text="voltar"
            android:textSize="20sp"
            tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded" />

        <Button
            android:id="@+id/enviar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2.5sp"
            android:layout_weight="1"
            android:background="#FEBD57"
            android:text="destinatário"
            android:textSize="20sp"
            tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded" />
    </LinearLayout>

</LinearLayout>